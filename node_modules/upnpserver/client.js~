var ssdp = require('node-ssdp')
  , client = new ssdp({logLevel: 'TRACE', log: true});

client.on('notify', function (event) {
  console.log('Got a notification.', event);
});

client.on('response', function(msg, rinfo) {
  console.log('Got a response to an m-search:', msg.toString());
});

//client.search('urn:schemas-upnp-org:service:MediaRenderer:1');

// Or maybe if you want to scour for everything

client.search('ssdp:all');
